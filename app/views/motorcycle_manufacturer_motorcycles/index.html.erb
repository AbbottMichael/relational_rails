<h1><%= @moto_mft.name %> Motorcycles</h1>

<p><%= link_to "Create Motorcycle", "/motorcycle_manufacturers/#{@moto_mft.id}/motorcycles/new" %></p>
<p><%= link_to "Sort A - Z", "/motorcycle_manufacturers/#{@moto_mft.id}/motorcycles?order=alphabetical" %></p>

<%= form_with url: "/motorcycle_manufacturers/#{@moto_mft.id}/motorcycles", method: :get, local: true do |form| %>
  <%= form.label :query, "Search for price:" %>
  <%= form.number_field :query, required: true %>
  <%= form.submit "Search" %>
<% end %>

<% @motorcycles.each do |motorcycle| %>
  <h3> <%= motorcycle.model %></h3>
  <p>Price: <%= motorcycle.price %></p>
  <p>Electric?: <%= motorcycle.electric %></p>
  <p>Motorcycle manufacturer id: <%= motorcycle.motorcycle_manufacturer_id %></p>
  <p><%= link_to "Edit #{motorcycle.model}", "/motorcycles/#{motorcycle.id}/edit" %></p>
<% end %>
