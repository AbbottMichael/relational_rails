<h1>Motorcycles</h1>

  <% @motorcycles.each do |motorcycle| %>
    <h3><%= motorcycle.model %></h3>
    <p>Price: <%= motorcycle.price %></p>
    <p>Electric?: <%= motorcycle.electric %></p>
    <p>Motorcycle manufacturer id: <%= motorcycle.motorcycle_manufacturer_id %></p>
    <p><%= link_to "Edit #{motorcycle.model}", "/motorcycles/#{motorcycle.id}/edit" %></p>
    <p><%= link_to "Delete #{motorcycle.model}", "/motorcycles/#{motorcycle.id}", method: :delete %></p>
  <% end %>
