<%= form_with url: "/games/#{@game.id}", method: :patch, local: true do |form| %>
	<%= form.label :game_name, 'Game Name:' %>
	<%= form.text_field :game_name, :value => @game.game_name %><br>

	<%= form.label :game_cost, 'Game cost:' %>
	<%= form.number_field :game_cost, :value => @game.game_cost %><br>

    <%= form.label :genre, 'Genre:' %>
	<%= form.text_field :genre, :value => @game.genre %><br>

	<%= form.label :multiplatform, 'Multiplatform?:' %>
	<%= form.radio_button :multiplatform, true, :checked => true %>
	<%= form.label :multiplatform_true, 'True' %>
	<%= form.radio_button :multiplatform, false %>
	<%= form.label :multiplatform_false, 'False' %><br><br>

    <%= form.hidden_field :game_studio_id, :value => @game.game_studio_id%>

	<%= form.submit 'Update Game' %>
<% end %>