<h1><%= @game_studio.studio_name %> Games</h1>

<p>Sort by: 
<%= link_to 'Alphabetical', "/game_studios/#{ @game_studio.id }/games?order=alphabetical" %>,
<%= link_to 'Cost', "/game_studios/#{ @game_studio.id }/games?order=cost" %> <!--refactor-->
</p>

<% @games.each do |game| %>
	<h3><a href= "/games/<%= game.id %>"><%= game.game_name %></a></h3>
  <p>Game cost: <%= game.game_cost %></p>
  <p>Game genre: <%= game.genre %></p>
  <p>Multiplatform?: <%= game.multiplatform %></p>
  <p>Created at: <%= game.created_at %></p>
  <p>Updated at: <%= game.updated_at %></p>
  <p><%= link_to "Edit #{game.game_name}", "/games/#{game.id}/edit" %></p>
<% end %>

<%= link_to 'Create Game', "/game_studios/#{ @game_studio.id }/games/new" %>
